<div class="container">
    <div class="row">
        <div class="col-md-7">
            <%= image_tag @portfolio_item.main_image %>
        </div>
        <div class="col-md-5">
            <h1><%= @portfolio_item.title %></h1>
            <hr>
            <em><%= @portfolio_item.subtitle %></em>
            <p><%= @portfolio_item.body %></p>
            
            <h2>Technologies</h2>
            
            <% @portfolio_item.technologies.each do |technology| %>
                <p> <%= technology.name %> </p>
            <% end %>
            <%= link_to "Back to portfolio items", portfolios_path %>
        </div>
    </div>
</div>